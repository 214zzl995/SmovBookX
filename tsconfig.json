{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true, //允许js
    "noImplicitAny": false, // 不进行any语法检查
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // 跳过了检查 可是 tm的 elementplus 就是有类型错误导致了 界面显示不出来
    "plugins": [
      {
        "name": "@vuedx/typescript-plugin-vue"
      },
      {
        "name": "eslint-plugin-vue"
      }
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "node",
      "element-plus/global"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/**/*.d.ts",
    "src/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js",
    "src/**/**/*.vue",
    "./src-tauri/tauri.conf.json"
  ]
}